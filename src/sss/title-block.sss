.bread-crumbs
	font-size: em(14)
	color: rgba(0, 0, 0, .5)

	&__link, &__this
		display: inline
	
	&__link

		a

			&:not(:hover)
				color: inherit

		&:after
			display: inline-block
			content: "/"
			margin: 0 0 0 4px

.title-block

	&__crumbs
		margin: 0 0 25px

	&__title
		
		h1
			font-weight: bold
			font-size: em(24)
			line-height: 1.35