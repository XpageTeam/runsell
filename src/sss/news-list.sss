.news
	display: flex
	
	&__img
		width: 300px
		margin-right: 30px

		img
			display: block
			width: 100%

	&__desc
		align-self: center
		max-width: 600px

		&-title
			font-size: em(20)
			margin: 0 0 10px
			display: block

		&-date
			color: rgba(0, 0, 0, .5)
			font-size: em(13)
		
		&-text
			margin: 20px 0 0

.news-list

	&__item

		&:not(:first-child)
			margin: 30px 0 0


@media (max-width: 660px)
	.news
		display: block

		&__img
			width: 100%
			margin: 0 0 10px
			display: block