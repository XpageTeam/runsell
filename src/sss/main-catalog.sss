.main-catalog

	&__cont
		padding: 30px 0 32px
	
	&__title
		font-weight: 400
		line-height: 1
		font-size: 20px
		letter-spacing: .055em

		&-cont
			display: flex
			justify-content: space-between
			align-items: center
			margin-bottom: 30px

.main-cat
	display: flex
	flex-wrap: wrap
	margin: 0 0 -32px -32px

	&__one
		margin: 0 0 32px 32px
		width: calc((100% - 32px * 4) / 4)
		display: flex
		flex-direction: column
		position: relative